---
import '../style.css';
import Navigation from '../components/Navigation.astro';
const { frontmatter, url } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/becoming/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
	<title>{`${frontmatter.title ? frontmatter.title + ' - ' : ''}Becoming Lumen`}</title>
	<meta property="og:title" content={frontmatter?.title || 'Becoming Lumen'} />
	<meta property="og:type" content="article" />
	<meta property="og:url" content={url} />
	<!-- <meta property="og:image" content="https://ia.media-imdb.com/images/rock.jpg" /> -->
  </head>
  <body>
	<Navigation />
    <main>
		<article>
			<button type="button" id="toggle">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-align-left-icon lucide-align-left">
					<path d="M15 12H3"/>
					<path d="M17 18H3"/>
					<path d="M21 6H3"/>
				</svg>
			</button>
			<slot />
		</article>
	</main>
  </body>
</html>

<script>
	const toggleButton = document.getElementById("toggle")

	function handleClick(){
		document.body.classList.toggle('open')
	}

	toggleButton?.addEventListener('click', handleClick)
</script>